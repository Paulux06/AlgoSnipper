{
	"publisher": "Paulux",
	"name": "algosnipper",
	"displayName": "AlgoSnipper",
	"description": "Auto-completion and snippets for IUT",
	"version": "0.0.26",
	"icon": "./icon.png",
	"engines": {
		"vscode": "^1.51.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:algosnipper.genLexique",
		"onCommand:algosnipper.insertArrow",
		"onCommand:algosnipper.launch",
		"onLanguage:algo"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "algosnipper.genLexique",
				"title": "Générer le lexique"
			},
			{
				"command": "algosnipper.launch",
				"title": "Lancer l'algorithme"
			}
		],
		"snippets": [
			{
			  "language": "algo",
			  "path": "./snippets.json"
			}
		],
		"languages": [
			{
				"id": "algo",
				"extensions": [
					".algo"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
			  "language": "algo",
			  "scopeName": "source.algo",
			  "path": "./algo.tmGrammar.json",
			  "embeddedLanguages": {
				"meta.embedded.block.javascript": "javascript"
			  }
			}
		],
        "keybindings": [
            {
                "command": "algosnipper.insertArrow",
                "key": "ctrl+enter",
                "mac": "cmd+enter"
            },
            {
                "command": "algosnipper.launch",
                "key": "ctrl+alt+l",
                "mac": "cmd+alt+l"
            }
        ]
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.51.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^12.11.7",
		"eslint": "^7.9.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/paulux06/algosnipper.git"
	}
}